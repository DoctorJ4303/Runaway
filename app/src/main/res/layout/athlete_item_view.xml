<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/athlete_item_edit_vertical_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.055555556" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/athlete_item_edit_vertical_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9444444" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/athlete_item_edit_horizontal_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/athlete_item_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/athlete_item_edit_vertical_1"
        app:layout_constraintEnd_toEndOf="@id/athlete_item_edit_vertical_2"
        app:layout_constraintBottom_toBottomOf="@id/athlete_item_edit_horizontal_1"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_corners"
        android:backgroundTint="@color/blue_700_transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>