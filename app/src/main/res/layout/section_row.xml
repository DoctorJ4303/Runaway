<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_500">

    <TextView
        android:id="@+id/section_row_distance"
        style="@style/Theme.Runaway.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/section_row_distance"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/section_row_distance_bar"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_row_distance" />

    <TextView
        android:id="@+id/section_row_pace"
        style="@style/Theme.Runaway.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/section_row_pace"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/section_row_distance_bar" />

    <SeekBar
        android:id="@+id/section_row_pace_bar"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_row_pace" />

    <EditText
        android:id="@+id/section_row_distance_edit"
        style="@style/Theme.Runaway.Text"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:text="0"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/section_row_distance"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <EditText
        android:id="@+id/section_row_pace_edit"
        style="@style/Theme.Runaway.Text"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:text="0"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/section_row_pace"
        app:layout_constraintTop_toBottomOf="@id/section_row_distance_bar"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>