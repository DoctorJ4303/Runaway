<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Runaway" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Runaway.Popup" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/round_corners</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="Theme.Runaway.Button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/blue_200</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:background">@drawable/round_corners</item>
    </style>

    <style name="Theme.Runaway.ButtonSharp" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:bottomRightRadius">10dp</item>
        <item name="android:background">@drawable/sharp_corners</item>
    </style>

</resources>